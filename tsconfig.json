{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "baseUrl": ".",
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "strict": true,
        "types": ["astro/client"],
        "jsx": "preserve",
        "paths": {
            "@styles/*": ["src/styles/*"],
            "@layouts/*": ["src/layouts/*"]
        }
    },
    "extends": "astro/tsconfigs/base"
}
