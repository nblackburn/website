---
import * as styles from './sidePanel.css';
import type { ImageMetadata } from 'astro';
import PageLayout from '@layouts/page.astro';

export interface Props {
    title: string;
    layout: string;
    subTitle?: string;
    activePage: string;
    image?: ImageMetadata;
}

const {title, subTitle, image, activePage, layout = '7fr 3fr'} = Astro.props;
---

<PageLayout
    title={title}
    subTitle={subTitle}
    image={image}
    activePage={activePage}
>
    <div class={styles.sidePanel} style={{gridTemplateColumns: layout}}>
        <section class={styles.left}>
            <slot />
        </section>
        <aside class={styles.right}>
            <slot name="sidepanel" />
        </aside>
    </div>
</PageLayout>
