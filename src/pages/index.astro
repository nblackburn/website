---
import { Image } from 'astro:assets';
import Hero from '@components/hero.vue';
import About from '@components/intro.vue';
import { sortBy } from '@utilities/sortBy';
import avatarUrl from '@assets/img/me.jpg';
import BaseLayout from '@layouts/base.astro';
import { getCollection } from 'astro:content';
import ListCard from '@components/listCard.vue';
import LatestProject from '@components/latestProject.vue';

const title = 'Home';
const activePage = 'home';
const projects = await getCollection('project');
const latestProject = sortBy(projects, (p) => p.data.pubDate)[0];
const description =
    'Specialist in experiences which empower and bring people together.';
---

<BaseLayout title={title} description={description} activePage={activePage}>
    <Hero slot="hero" />
    <About>
        <Image
            src={avatarUrl}
            alt="Nathaniel Blackburn"
            width={556}
            height={450}
            format="webp"
            slot="image"
            loading="eager"
        />
    </About>
    <LatestProject>
        <ListCard
            title={latestProject.data.title}
            description={latestProject.data.description}
            tags={latestProject.data.tags}
            url={latestProject.data.url}
            createdAt={latestProject.data.pubDate}
            baseURL="/projects/tags"
            linkLabel="View project"
        >
            <Image
                src={latestProject.data.thumbnail}
                alt={latestProject.data.title}
                width={768}
                height={200}
                loading="eager"
                format="webp"
                slot="thumbnail"
            />
        </ListCard>
    </LatestProject>
</BaseLayout>
