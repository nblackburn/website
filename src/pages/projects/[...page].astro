---
import Link from '@components/link.vue';
import PageLayout from '@layouts/page.astro';
import { GetStaticPaths, Page } from 'astro';
import { Image } from '@astrojs/image/components';
import Pagination from '@components/pagination.vue';
import ProjectCard from '@components/projectCard.vue';
import ProjectList from '@components/projectList.vue';

interface Props {
    page: Page;
}

export const getProjects = async () => {
    const projects = await Astro.glob('./*.md');

    return projects
        .map((project) => {
            const { frontmatter } = project;

            return frontmatter;
        })
        .sort((a, b) => {
            if (a.publishedDate === b.publishedDate) {
                return 0;
            }

            return a.publishedDate < b.publishedDate ? 1 : -1;
        });
};

export const getStaticPaths: GetStaticPaths = async ({ paginate }) => {
    const projects = await getProjects();
    const mappedProjects = projects.map((project) => {
        return {
            props: project
        };
    });

    return paginate(mappedProjects, { pageSize: 4 });
};

const title = 'Projects';
const { page } = Astro.props;
const activePage = 'projects';
const subTitle = 'Some of the things i have worked on';
---

<PageLayout title={title} subTitle={subTitle} activePage={activePage}>
    <ProjectList>
        {
            page.data.map(({ props }) => (
                <ProjectCard project={props}>
                    <Link href={props.url} slot="thumbnail">
                        <Image
                            src={props.thumbnail}
                            alt={props.title}
                            width={768}
                            height={200}
                            fit="outside"
                            loading="eager"
                            format="webp"
                        />
                    </Link>
                </ProjectCard>
            ))
        }
    </ProjectList>
    <Pagination links={page.url} />
</PageLayout>
